<h1>Products</h1>
<% if has_role?(:seller) %>
<%= link_to 'New Product', new_product_path, class: 'btn btn-info' %>
<% end %>
<table class = "table table-striped table-bordered" >

  <thead class="table-dark">
         <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>






  <tbody>
    <% @products.each do |product| %>
      <tr>
       

        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><span>Rs</span> <%= product.price %></td>
       
        <% if has_role?(:seller) %>

          <td><%= link_to 'Show', product, class: 'btn btn-info' %></td>
          <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        <% else %>
          <td><%= link_to 'Show', product, class: 'btn btn-primary' %></td>
            <% if user_signed_in? %> 
            <%= form_for(:line_item, url: order_line_items_path(current_user.latest_order), local: true ) do |form| %>
            <%= form.hidden_field :product_id, value: product.id %>
           <td> <%= form.number_field :quantity, value: 1, min: 1 %></td>
           <td> <%= form.submit 'Add to cart' %></td> 
          <% end %>
             <td><%#= link_to 'Add to Cart', new_line_item_path %></td>
          <% else%>
             <td> <%= link_to 'Add to Cart', new_user_session_path, class: 'btn btn-primary' %></td>
          <% end %>
        
          
        <% end %>

      </tr>
    <% end %>

  </tbody>
</table>

<br>
