
<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>
<strong>Images:</strong>
 <%if @product.images.attached?%>
   <% (0...@product.images.count).each do|image| %>
      <%= image_tag url_for(@product.images[image]) , style:  "width:200px; display:block" , class: "img-fluid img-thumbnail" %>
   <%#=link_to @product.images[image].filename, rails_blob_path(@product.images[image], disposition: "attachment") %>
    <% end %>

  <%end%>

<% if user_signed_in? %>  
 
     <td><%#= link_to 'Add to Cart', new_line_item_path %></td>
<% else%>
     <td> <%= link_to 'Add to Cart', new_user_session_path, class: 'btn btn-primary'%></td>
<% end %>

<% if has_role?(:seller) %>
  <%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-warning' %> |
  <%= link_to 'Back', products_path, class: 'btn btn-primary' %>
<% else %>
  <%= link_to 'Back', products_path, class: 'btn btn-primary'%>
<% end %>
