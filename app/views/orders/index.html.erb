<% if current_user.orders.present? %>
  <h4>Your Order Placed </h4>

   <table class = "table table-striped table-bordered" >
     <thead class="table-dark">
      <tr>
        <th>Total Quantity</th>
        <th>Total Price</th>
        <th></th>
         <th></th>
         <th colspan="3"></th>
      </tr>
     </thead>


     <tbody>
       <% @orders.each do |order| %>
         <tr>
          
           <td><%= order.total_quantity %></td>
           <td> <span>Rs</span> <%= order.total_price %></td>
           <td><%#= link_to 'Show', [line_item.product, line_item], class: 'btn btn-primary'%></td>
           <td><%#= link_to 'Edit', edit_product_line_item_path(line_item.product, line_item) %></td>
           <td><%#= link_to 'Destroy', [line_item.product,line_item], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
         </tr>
       <% end %>
     </tbody>
   </table>
   <% else %>
   <%= render plain: 'You have no order yet' %>
<% end %>

<%#= link_to 'Order Place', orders_place_order_path , class: 'btn btn-danger'%>

