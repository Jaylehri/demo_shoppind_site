
<h1>Line Items</h1>

 <table class = "table table-striped table-bordered" >
  <thead class="table-dark">
      
   <% if user_signed_in? %>
      <tr>
    
     <th>Quantity</th>
      <th>Price</th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>


    <% current_user.line_items.each do |line_item| %>
      <tr>
        <td><%= line_item.quantity %></td>
        <td><%= line_item.price %></td>
        <td><%#= line_item.price %></td>
        <td><%#= link_to 'Show', [line_item.order, line_item], class: 'btn btn-primary'%></td>
        <td><%#= link_to 'Edit', edit_product_line_item_path(line_item.product, line_item) %></td>
        <td><%#= link_to 'Destroy', [line_item.order, line_item] ,method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
    <% else %>
    <%= render plain: 'Empty cart'%>
    <% end %>


  </tbody>
</table>

<br>
<% if user_signed_in?%>

<% if current_user.line_items.present? %>
<h4>Select payment mode</h4>

  <%= form_for(:order, url: orders_path , local: true) do |form| %>

  <div class="field">
    <%=form.radio_button(:payment_mode, 'COD') %>
    <%= form.label :payment_mode, "COD" %>
  </div>
  
  <div class="actions">
    <%= form.submit 'Place order' %>
  </div>

  <% end %>
  <% end %>
  <% end %>

