<%= form_with model: @lineitem, local: true do |form| %>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
